<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:columnCount="3"
          android:rowCount="4"
    >
    <TextView
        android:layout_margin="@dimen/text_margin"
        android:id="@+id/specimen_genus"
        android:layout_row="0"
        android:layout_column="0"
        />
    <TextView
        android:layout_margin="@dimen/text_margin"
        android:id="@+id/specimen_species"
        android:layout_row="1"
        android:layout_column="0"
        />
    <TextView
        android:layout_margin="@dimen/text_margin"
        android:id="@+id/specimen_subspecies"
        android:layout_row="2"
        android:layout_column="0"
        />
    <TextView
        android:layout_margin="@dimen/text_margin"
        android:id="@+id/specimen_year"
        android:layout_row="0"
        android:layout_column="1"
        />
    <TextView
        android:layout_margin="@dimen/text_margin"
        android:id="@+id/specimen_month"
        android:layout_row="1"
        android:layout_column="1"
        />
    <TextView
        android:layout_margin="@dimen/text_margin"
        android:id="@+id/specimen_day"
        android:layout_row="2"
        android:layout_column="1"
        />
    <TextView
        android:layout_margin="@dimen/text_margin"
        android:id="@+id/specimen_hour"
        android:layout_row="0"
        android:layout_column="2"
        />
    <TextView
        android:layout_margin="@dimen/text_margin"
        android:id="@+id/specimen_minute"
        android:layout_row="1"
        android:layout_column="2"
        />
    <TextView
        android:layout_margin="@dimen/text_margin"
        android:id="@+id/specimen_location_URI"
        android:layout_row="2"
        android:layout_column="2"
        />
    <TextView
        android:layout_margin="@dimen/text_margin"
        android:id="@+id/specimen_identifier"
        android:layout_column="0"
        android:layout_row="3"/>

</GridLayout>